@model ProductsViewModel
@{
    ViewData["Title"] = "Product Manager";
}

<h1>@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-2">
        <ul class="list-group">
            <a asp-action="List" asp-route-id="All"
               class="list-group-item @(Model.CheckActiveCategory("All"))">
                All
            </a>
            @foreach (var category in Model.Categories)
            {
                <a asp-action="List" asp-route-id="@category.Name"
                   class="list-group-item @(Model.CheckActiveCategory(category.Name))">
                    @category.Name
                </a>
            }
        </ul>
    </div>

    <div class="col-md-10">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Price</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model.Products)

                {
                    <tr>
                        <td>@product.Name</td>
                        <td>@product.Price.ToString("C")</td>
                        <td>
                            <a asp-action="Update" asp-route-id="@product.ProductID">Update</a>
                        </td>
                        <td>
                            <a asp-action="Delete" asp-route-id="@product.ProductID">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <a asp-action="Add" class="btn btn-primary">Add New Product</a>
    </div>
</div>
